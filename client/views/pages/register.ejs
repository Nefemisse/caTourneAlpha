          document.getElementById('ville').textContent = "Ville*"
          $("#ville").css("color", "#000000");
          $("#field-ville").css("border-color", "#ced4da");
        }
      }
    })
    $("#field-codePostal").keyup(function() {
      if($("#field-codePostal").val() == "") {
        let errorMessage = "Veuillez entrez votre code postal";
        document.getElementById('codePostal').textContent = errorMessage;
        $("#field-codePostal").css("border-color", "#FF0000");
        $("#field-codePostal").next(".cross").show();
        $("#codePostal").css("color", "#FF0000");
      } else {
        if (!$("#field-codePostal").val().match(/^[0-9]+$/i)) {
