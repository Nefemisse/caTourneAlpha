      }
    })
    $("#field-prenom").keyup(function() {
      if($("#field-prenom").val() == "") {
        let errorMessage = "Veuillez entrez votre prenom";
        document.getElementById('prenom').textContent = errorMessage;
        $("#field-prenom").css("border-color", "#FF0000");
        $("#field-prenom").next(".cross").show();
        $("#prenom").css("color", "#FF0000");
      } else {
        if (!$("#field-prenom").val().match(/^[a-z]+$/i)) {
          let errorMessage = "Uniquement des lettres";
          $("#field-prenom").next(".cross").show()
          $("#field-prenom").css("border-color", "#FF0000");
          document.getElementById('prenom').textContent = errorMessage
          $("#prenom").css("color", "#FF0000");
        } else {
          $("#field-prenom").next(".cross").hide().text("");
          document.getElementById('prenom').textContent = "Prénom*"
          $("#prenom").css("color", "#000000");
          $("#field-prenom").css("border-color", "#ced4da");
        }
      }
    })
    $("#field-password1").keyup(function() {
      if($("#field-password1").val() == "") {
        let errorMessage = "Veuillez entrez votre mot de passe";
        document.getElementById('password1').textContent = errorMessage;
        $("#field-password1").css("border-color", "#FF0000");
        $("#field-password1").next(".cross").show();
        $("#password1").css("color", "#FF0000");
      } else {
