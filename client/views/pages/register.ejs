          document.getElementById('codePostal').textContent = errorMessage
          $("#codePostal").css("color", "#FF0000");
        } else {
          $("#field-codePostal").next(".cross").hide().text("");
          document.getElementById('codePostal').textContent = "Code Postal*"
          $("#codePostal").css("color", "#000000");
          $("#field-codePostal").css("border-color", "#ced4da");
        }
      }
    })
    $("#envoyer").click(()=>{
      valid = true;
      if($("#field-nom").val() == "") {
        let errorMessage = "Veuillez indiquer votre nom";
        document.getElementById('nom').textContent = errorMessage;
        $("#field-nom").css("border-color", "#FF0000"); 
        $("#field-nom").next(".cross").fadeIn();
        $("#nom").css("color", "#FF0000");
        valid = false;
      }
      if($("#field-prenom").val() == "") {
        let errorMessage = "Veuillez indiquer votre prenom";
        document.getElementById('prenom').textContent = errorMessage;
        $("#field-prenom").css("border-color", "#FF0000"); 
        $("#field-prenom").next(".cross").fadeIn();
        $("#prenom").css("color", "#FF0000");
        valid = false;
      }
      if($("#field-password1").val() == "") {
        let errorMessage = "Veuillez entrer un mot de passe";
        document.getElementById('password1').textContent = errorMessage;
        $("#field-password1").css("border-color", "#FF0000");
        $("#field-password1").next(".cross").fadeIn();
        $("#password1").css("color", "#FF0000");
        valid = false;
      }
      if($("#field-password").val() == "") {
        let errorMessage = "Veuillez confirmer votre mot de passe";
        document.getElementById('password').textContent = errorMessage;
        $("#field-password").css("border-color", "#FF0000");
        $("#field-password").next(".cross").fadeIn();
        $("#password").css("color", "#FF0000");
        valid = false;
      }
      if($("#field-email").val() == "") {
        let errorMessage = "Veuillez indiquer votre adresse mail";
        document.getElementById('email').textContent = errorMessage;
        $("#field-email").css("border-color", "#FF0000");
        $("#field-email").next(".cross").fadeIn();
        $("#email").css("color", "#FF0000");
        valid = false;
      }
      if($("#field-adresse").val() == "") {
        let errorMessage = "Veuillez indiquer votre lieu de résidence";
        document.getElementById('adresse').textContent = errorMessage;
        $("#field-adresse").css("border-color", "#FF0000");
        $("#field-adresse").next(".cross").fadeIn();
        $("#adresse").css("color", "#FF0000");
        valid = false;
      }
      if($("#field-ville").val() == "") {
        let errorMessage = "Veuillez indiquer votre ville";
        document.getElementById('ville').textContent = errorMessage;
        $("#field-ville").css("border-color", "#FF0000");
        $("#field-ville").next(".cross").fadeIn();
        $("#ville").css("color", "#FF0000");
        valid = false;
      }
      if($("#field-codePostal").val() == "") {
        let errorMessage = "Veuillez indiquer le code postal";
        document.getElementById('codePostal').textContent = errorMessage;
        $("#field-codePostal").css("border-color", "#FF0000");
        $("#field-codePostal").next(".cross").fadeIn();
        $("#codePostal").css("color", "#FF0000");
        valid = false;
      } else if($("#field-codePostal").val().length != 5) {
        let errorMessage = "Mauvais format (ex: 03330)";
        document.getElementById('codePostal').textContent = errorMessage;
        $("#field-codePostal").css("border-color", "#FF0000");
        $("#field-codePostal").next(".cross").fadeIn();
        $("#codePostal").css("color", "#FF0000");
        valid = false;
      }
      return valid;
    })
  });

