          $("#field-password1").css("border-color", "#FF0000"); 
          document.getElementById('password1').textContent = errorMessage
          $("#password1").css("color", "#FF0000");
        } else {
          $("#field-password1").next(".cross").hide().text("");
          document.getElementById('password1').textContent = "Mot de passe*"
          $("#password1").css("color", "#000000");
          $("#field-password1").css("border-color", "#ced4da");
        }
      }
    })
    $("#field-password").keyup(function() {
      if($("#field-password").val() == "") {
        let errorMessage = "Entrez à nouveau votre mot de passe";
        document.getElementById('password').textContent = errorMessage;
        $("#field-password").css("border-color", "#FF0000");
        $("#field-password").next(".cross").show();
        $("#password").css("color", "#FF0000");
      } else {
        if ($("#field-password").val() == $("#field-password1").val()) {
          $("#field-password").next(".cross").hide().text("");
          document.getElementById('password').textContent = "Confirmation mot de passe*"
          $("#password").css("color", "#000000");
          $("#field-password").css("border-color", "#ced4da");
        } else {
          let errorMessage = "Les mot de passe ne correspondent pas";
          $("#field-password").next(".cross").show()
          $("#field-password").css("border-color", "#FF0000"); 
          document.getElementById('password').textContent = errorMessage
